.banner{
   position: relative;
}
.banner image{
   width: 100%;
   height: 350rpx;
}
.login{
   position: absolute;
   top: 80rpx;
   left: 300rpx;
   text-align: center;
}
.login image{
   width: 150rpx;
   height: 150rpx;
   border-radius: 50%;
}
.login text{
  display: block;
}
.box{
   display: flex;
   flex-wrap: wrap;
   width: 100%;
   margin-top: 15rpx;
}
.list{
   width: 24%;
   text-align: center;
   border: 1rpx solid #ccc;
   margin-left: 3rpx;
   margin-top: 10rpx;
}
.list image{
    width: 100rpx;
    height: 100rpx;
}
.list text{
   display: block;
   margin-top: 10rpx;
   font-size: 25rpx;
}
